<%= form_for@restaurant do |f| %>

	<div class="field">
		<%= f.label :name %><br />
		<%= f.text_field :name %>
	</div>
	<div class="field">
		<%= f.label :address %><br />
		<%= f.text_field :address %>
	</div>
	<div class="field">
		<%= f.label :summary %><br />
		<%= f.text_field :summary %>
	</div>
	<div class="field">
		<%= f.label :capacity %><br />
		<%= f.number_field :capacity %>
	</div>
	<div class="field">
		<%= f.label :website %><br />
		<%= f.text_field :website %>
	</div>
	<div class="field">
		<%= f.label :category %><br />
		<%= f.text_field :category %>
	</div>
	<div class="actions">
		<%= f.submit "Add new Restaurant" %>
	</div>
	<% end %>